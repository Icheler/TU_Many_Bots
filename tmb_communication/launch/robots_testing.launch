<launch>
    <arg name="robot" default="$(optenv ROBOT rto-1)" doc="Robot type [rto-1]"/>
    <arg name="robot_env" default="$(optenv ROBOT_ENV simple_world)" doc="Simulation world [simple_world, hallway_loop]"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find rto_worlds)/worlds/$(arg robot_env).world"/> 
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find rto_description)/urdf/$(arg robot).urdf.xacro"/>
    
    <group ns="robot1">
        <param name="tf_prefix" value="robot1_tf"/>
        <include file="$(find tmb_communication)/launch/one_robot.launch">
            <arg name="x_pos" default="0.0"/>
            <arg name="y_pos" default="0.0"/>
            <arg name="z_pos" default="0.0"/>
            <arg name="name"  value="Robot1"/>
        </include>
        <node pkg="gmapping" type="slam_gmapping" name="rto_gmapping">
            <param name="base_frame" value="robot1_tf/base_link"/>
            <param name="odom_frame" value="robot1_tf/odom"/>
            <param name="map_frame" value="robot1_tf/map"/>
            <param name="map_update_interval" value="0.1"/>
            <param name="lskip" value="5"/>
            <param name="xmin" value="-20" />
            <param name="xmax" value="20" />
            <param name="ymin" value="-20" />
            <param name="ymax" value="20" />
            <param name="angularUpdate" value="0.1"/>
            <param name="linearUpdate" value="0.1"/>
        </node>
    </group>
    <group ns="robot2">
        <param name="tf_prefix" value="robot2_tf"/>
        <include file="$(find tmb_communication)/launch/one_robot.launch">
            <arg name="x_pos" default="1.0"/>
            <arg name="y_pos" default="0.0"/>
            <arg name="z_pos" default="0.0"/>
            <arg name="name"  value="Robot2"/>
        </include>
        <node pkg="gmapping" type="slam_gmapping" name="rto_gmapping">
            <param name="base_frame" value="robot2_tf/base_link"/>
            <param name="odom_frame" value="robot2_tf/odom"/>
            <param name="map_frame" value="robot2_tf/map"/>
            <param name="map_update_interval" value="1"/>
        </node>
    </group>
</launch>
