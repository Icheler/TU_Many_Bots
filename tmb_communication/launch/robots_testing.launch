<launch>
    <arg name="robot" default="$(optenv ROBOT rto-1)" doc="Robot type [rto-1]"/>
    <arg name="robot_env" default="$(optenv ROBOT_ENV simple_world)" doc="Simulation world [simple_world, hallway_loop]"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find rto_worlds)/worlds/$(arg robot_env).world"/> 
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find rto_description)/urdf/$(arg robot).urdf.xacro"/>
    
    <group ns="robot1">
        <param name="tf_prefix" value="robot1"/>
        <arg name="name" default="robot" />
        <arg name="x_pos" default="0.0"/>
        <arg name="y_pos" default="0.0"/>
        <arg name="z_pos" default="0.0"/>

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="20.0"/>
        </node>

        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model $(arg name) -x $(arg x_pos) -y $(arg y_pos) 
            -z $(arg z_pos) -param /robot_description" />

        <node pkg="gmapping" type="slam_gmapping" name="rto_gmapping">
            <param name="base_frame" value="/robot1/base_link"/>
            <param name="odom_frame" value="/robot1/odom"/>
            <param name="map_frame" value="/robot1/map"/>
            <param name="map_update_interval" value="0.1"/>
            <param name="lskip" value="2"/>
            <param name="xmin" value="-20" />
            <param name="xmax" value="20" />
            <param name="ymin" value="-20" />
            <param name="ymax" value="20" />
            <param name="angularUpdate" value="0.05"/>
            <param name="linearUpdate" value="0.05"/>
            <param name="maxUrange" value="5.0"/>
            <param name="maxRange" value="5.7"/>
            
        </node>
    </group>
    <group ns="robot2">
        <param name="tf_prefix" value="robot2"/>
        <include file="$(find tmb_communication)/launch/one_robot.launch">
            <arg name="x_pos" default="1.0"/>
            <arg name="y_pos" default="0.0"/>
            <arg name="z_pos" default="0.0"/>
            <arg name="name"  value="Robot2"/>
        </include>
        <node pkg="gmapping" type="slam_gmapping" name="rto_gmapping">
            <param name="base_frame" value="/robot2/base_link"/>
            <param name="odom_frame" value="/robot2/odom"/>
            <param name="map_frame" value="/robot2/map"/>
            <param name="map_update_interval" value="0.1"/>
            <param name="lskip" value="2"/>
            <param name="xmin" value="-20" />
            <param name="xmax" value="20" />
            <param name="ymin" value="-20" />
            <param name="ymax" value="20" />
            <param name="angularUpdate" value="0.05"/>
            <param name="linearUpdate" value="0.05"/>
            <param name="maxUrange" value="5.0"/>
            <param name="maxRange" value="5.7"/>
        </node>
    </group>
</launch>
