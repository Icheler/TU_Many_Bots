<launch>
    <arg name="robot" default="$(optenv ROBOT rto-1)" doc="Robot type [rto-1]"/>
    <arg name="blind_robot" default="$(optenv BLIND_ROBOT rto-blind)" doc="Robot type [rto-1-blind]"/>
    <arg name="robot_env" default="$(optenv ROBOT_ENV simple_corridor)" doc="Simulation world [simple_world, hallway_loop]"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find rto_worlds)/worlds/$(arg robot_env).world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find rto_description)/urdf/robots/$(arg robot).urdf.xacro"/>
    <param name="blind_robot_description" command="$(find xacro)/xacro --inorder $(find tmb_perception)/urdf/robots/$(arg blind_robot).urdf.xacro"/>

    <group ns="robot1">
        <param name="tf_prefix" value="robot1"/>
        <arg name="name" default="robot1" />
        <arg name="x_pos" default="1.0"/>
        <arg name="y_pos" default="0.0"/>
        <arg name="z_pos" default="0.0"/>

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="20.0"/>
        </node>

        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model $(arg name) -x $(arg x_pos) -y $(arg y_pos)
            -z $(arg z_pos) -param /robot_description" />

        <node pkg="tmb_communication" type="position_listener" name="listentf" output="screen" >
            <param name="name" type="str" value="robot1"/>
        </node>
    </group>
    <group ns="robot2">
        <param name="tf_prefix" value="robot2"/>
        <arg name="x_pos" default="-1.0"/>
        <arg name="y_pos" default="0.0"/>
        <arg name="z_pos" default="0.0"/>
        <arg name="name"  value="robot2"/>


        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="20.0"/>
        </node>

        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model $(arg name) -x $(arg x_pos) -y $(arg y_pos)
            -z $(arg z_pos) -param /robot_description" />

        <node pkg="tmb_communication" type="position_listener" name="listentf" output="screen" >
            <param name="name" type="str" value="robot2"/>
        </node>
    </group>
    <group ns="robot_blind">
        <param name="tf_prefix" value="blind_robot"/>
            <arg name="x_pos" default="4"/>
            <arg name="y_pos" default="-3.5"/>
            <arg name="z_pos" default="0.0"/>
            <arg name="yaw" default="7.57"/>
            <arg name="name"  value="blind_robot"/>

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="20.0"/>
        </node>
        <node pkg="gmapping" type="slam_gmapping" name="rto_gmapping">
            <param name="base_frame" value="/blind_robot/base_link"/>
            <param name="odom_frame" value="/blind_robot/odom"/>
            <param name="map_frame" value="/blind_robot/map"/>
            <rosparam file="$(find tmb_communication)/config/gmapping_config.yaml"/>
        </node>

        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model $(arg name) -x $(arg x_pos) -y $(arg y_pos)
            -z $(arg z_pos) -Y $(arg yaw) -param /blind_robot_description" />

        <node pkg="tmb_communication" type="position_listener" name="listentf" output="screen" >
            <param name="name" type="str" value="blind_robot"/>
        </node>
    </group>
</launch>
